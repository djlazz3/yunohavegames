<h2>New Game</h2>
<%= link_to("<-- Back to games", {:action => 'index'}, :class => 'back-link') %>
    <% if current_user.try(:admin?)%>
<%= form_for(@game, :url => {:action => 'create'}) do |g| %>
    <%= g.label :title %>
    <%= g.text_field :title %>
    <%= g.label :image %>
    <%= g.text_field :image %>
    <%= g.label :game %>
    <%= g.text_field :game %>
    <%= g.submit "Create Game" %>
    <% end %>
    <% else %>
    <h1>You do not have access to this page.</h1>
    <p>You may need to <a href="/users/sign_in">log in</a></p>
<% end %>