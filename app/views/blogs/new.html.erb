<h1>Blog</h1>
<%= form_for(@blog, html:{class:'form-inline'}) do |f| %>
  <div class="form-group">
    <label for="blog_name">Name</label>
    <%= f.text_field :name, class:'form-control', placeholder:"Blog Name" %>
  </div>
  <div class="form-group">
    <label for="blog_subject">Subject</label>
    <%= f.text_field :subject, class:'form-control', placeholder:"Subject" %>
  </div>
  <%= f.submit "Create Blog", class:'btn btn-default' %>
<% end %>
