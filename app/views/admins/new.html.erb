<% if current_user.try(:admin?) && current_user.try(:email) == "bpadron2000@gmail.com"%>
    <%= form_for(@admin, :url => {:action => 'create'}) do |a| %>
        <%= a.label :email %>
        <%= a.text_field :email %>
        <%= a.submit "Create Admin" %>
    <% end %>
<% else %>
    <h1>You do not have access to this page.</h1>
    <% if current_user.try(:email) %>
        <p> Currently logged in as <%= current_user.try(:email) %> </p>
        <%= link_to "Back to home page", root_path %>
    <% else %>
        <p>You may need to <a href="/users/sign_in">log in</a></p>
        <%= link_to "Back to home page", root_path %>
    <% end %>
<% end %>